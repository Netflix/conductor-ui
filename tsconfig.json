{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",

    "jsx": "react-jsx",
    "noImplicitAny": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["cypress"]
}
